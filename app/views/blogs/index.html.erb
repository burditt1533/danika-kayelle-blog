<div class="col-md-8 posts-container">

  <div class="ajax-posts">

<% if false %>

  <% @title.each do |blog|  %>
    <div class="posts-wrap col-md-6 clearfix">
      <% imgIDs = blog.css("wp|postmeta wp|meta_key:contains('thumbnail_id') ~ wp|meta_value").try(:text) %>

      <% if imgIDs != "" %>
        <div class="col-xs-12">
          <%= link_to 'old_blogs?post_id=' + blog.xpath("wp:post_id").text do %>
            <%= image_tag @image.xpath(".//post_id[text() = '" + imgIDs + "']/following-sibling::attachment_url").text, class: 'post-image' %>
            <%= @image.xpath(".//post_id[text() = '" + imgIDs + "']/following-sibling::attachment_url").text.split('/').last%>
          <% end %> 
        </div>
      <% else %> 
       <div class="col-xs-12">
          <%= link_to 'blog'  do %>
            <%= image_tag '', class: 'post-image', style: 'display: none;' %>
          <% end %> 
        </div>
      <% end %> 

        <div class="col-sm-12">
          <div class="col-sm-12" style="text-align: center;">
            <h3 class="blog-title"><%= blog.xpath("title").text %></h3>
          </div>
          <div class="col-xs-12"><%= truncate_html(blog.xpath("content:encoded").text.html_safe, length: 600, omission: '...') %></div>
        </div>
        
        <% if user_signed_in? or true %>
          <div class="col-xs-12">
            <%= link_to 'old_blogs'  do %>
              <button type="button" class="btn btn-primary">Read More</button>
            <% end %>

            <%= link_to 'edit_blog_path(blog)' do %>
              <button type="button" class="btn btn-primary">Edit</button>
            <% end %>

            <%= link_to 'blog', method: :delete, data: { confirm: 'Are you sure?' }  do %>
              <button type="button" class="btn btn-primary">Delete</button>
            <% end %>

            <p class="tags">
              <%= blog.xpath("wp:post_date").text.to_datetime.strftime("%B %d, %Y ") %>
              /by <%= User.last.first_name %><%= User.last.last_name %>
              /Tags: in 
              <% blog.xpath("category").each do |tag| %>
                <a href=""><%= tag.text %></a>,
              <% end %>
            </p>
            <hr>
          </div>

      <% end %>
    </div>

  <% end %>
<% end %>



<% if true %>
  <% @blogs.each do |blog| %>

    <div class="posts-wrap col-md-4 clearfix">

          <% if blog.static_image.present? %>
            <div class="col-xs-12">
              <%= link_to blog  do %>
                <%= image_tag blog.static_image, class: 'post-image' %>
              <% end %> 
            </div>
          <% elsif blog.static_image == "" && blog.image.url(:large) == ""  %>

          <% else %> 
            <div class="col-xs-12">
              <%= link_to blog  do %>
                <%= image_tag blog.image.url(:large), class: 'post-image' %>
              <% end %> 
            </div>
          <% end %> 


      <div class="col-sm-12">
        <div class="col-sm-12" style="text-align: center;">
          <h3 class="blog-title"><%= blog.title %></h3>
        </div>
        <div class="col-xs-12"><%= truncate_html(blog.content.html_safe, length: 300) %></div>
      </div>

    <% if user_signed_in? or true%>
        <div class="col-xs-12">
          <%= link_to blog  do %>
            <button type="button" class="btn btn-primary">Read More</button>
          <% end %>

          

          <p class="tags" style="display:none;">
            <%= blog.created_at.strftime("%B %d, %Y ")%>
            /by <%= User.last.first_name%><%= User.last.last_name%>
            /Tags: in <%= raw blog.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')%>
          </p>
          <hr>
          <%= link_to edit_blog_path(blog)  do %>
            <span>Edit</span>
          <% end %>

          <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' }  do %>
            <span>Delete</span>
          <% end %>
        </div>

    <% end %>
      </div>

      
  <% end %>

  </div>

  <%= link_to 'blogs?page=' + ( + 1).to_s, data:{behavior: "loadmore-link"}, class: 'col-xs-12'  do  %>
      <button type="button" data-behavior="loadMore" class="btn btn-primary">Load More</button>
  <% end %>  

<%= will_paginate @blogs %>
</div>



  



<div class="clearfix"></div>

  <% end %>  


